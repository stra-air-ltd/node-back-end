{
  "name": "node-back-end",
  "version": "1.0.0",
  "description": "星空伟奕科技有限公司的node.js api后端",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "sonar": "npm run test:coverage && sonar-scanner",
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "testTimeout": 10000,
    "detectOpenHandles": true,
    "forceExit": true
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "../test-report.xml",
    "indent": 4
  },
  "jest-junit": {
    "outputDirectory": ".",
    "outputName": "test-report.xml",
    "ancestorSeparator": " › ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@types/hapi": "^18.0.14",
    "@types/hapi__joi": "^17.1.15",
    "@types/joi": "^17.2.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "hapi": "^18.1.0",
    "hapi-pino": "^12.1.0",
    "mysql2": "^3.12.0",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@types/hapi__hapi": "^20.0.13",
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.11.10",
    "@types/redis": "^4.0.10",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
